<div class="py-8 px-4 mx-auto w-1/2 rounded-xl">
  <div class="mb-3 pb-2 border-b border-gray-400">
    <div class="flex flex-row justify-between">
      <div class="text-gray-200 text-3xl"><%= @job.title %></div>
      <button class="w-4 h-4 text-baseline">
        <svg xmlns="http://www.w3.org/2000/svg" class="mt-2"  viewBox="0 0 384 512"><path fill="#d1d5db" d="M0 48C0 21.5 21.5 0 48 0l0 48 0 393.4 130.1-92.9c8.3-6 19.6-6 27.9 0L336 441.4 336 48 48 48 48 0 336 0c26.5 0 48 21.5 48 48l0 440c0 9-5 17.2-13 21.3s-17.6 3.4-24.9-1.8L192 397.5 37.9 507.5c-7.3 5.2-16.9 5.9-24.9 1.8S0 497 0 488L0 48z"/></svg>
      </button>
    </div>
    <div class="flex flex-row justify-between py-1">
      <div class="text-gray-400"><%= @job.company_name %></div>
      <div class="text-gray-400"><%= @job.location %></div>
    </div>
  </div>
  <div class="pt-2 pb-4">
    <p class="text-gray-400 text-xs">About:</p>
    <div class="text-gray-300"><%= @job.description %></div>
  </div>
  <div class="flex flex-row justify-between">
    <div>
      <div class="text-gray-300">Start Date: <%= @job.start_date.strftime("%b %d, %Y") %></div>
      <div class="text-gray-300">End Date: <%= @job.end_date.strftime("%b %d, %Y") %></div>
    </div>
    <div class="text-gray-300 text-lg">$<%= @job.price %> per month</div>
  </div>
</div>
