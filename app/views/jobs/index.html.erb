<%# Top Filters %>
<div class="border-b-2 border-gray-300 text-white">
  <div class="mx-10 flex flex-row my-5 justify-between">
    <div>Job Title</div>
    <div>Work Location</div>
    <div>Experience</div>
    <div>Price Range</div>
  </div>
</div>
<%# Body Container %>
<div class="flex flex-row mx-10">
  <%# Side filters %>
  <div class="flex flex-col  py-5 w-1/4 h-full">
    <h1 class="text-white">Filters</h1>
    <h2 class="text-gray-300 text-sm my-2">Working Schedule</h2>
      <ul class="text-white text-xs font-light space-y-3">
        <li><input id="full-time-checkbox" type="checkbox" value="Full Time" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"><label for="full-time-checkbox" class="ms-2 text-xs font-light text-gray-900 dark:text-gray-300">Full Time</label></li>
        <li><input id="part-time-checkbox" type="checkbox" value="Part Time" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"><label for="part-time-checkbox" class="ms-2 text-xs font-light text-gray-900 dark:text-gray-300">Part Time</label></li>
        <li><input id="project-work-checkbox" type="checkbox" value="Project Work" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"><label for="project-work-checkbox" class="ms-2 text-xs font-light text-gray-900 dark:text-gray-300">Project Work</label></li>
      </ul>
    <h2 class="text-gray-300 text-sm my-2">Employment Type</h2>
    <div class="flex items-center mb-4">
      <ul class="text-white text-xs font-light space-y-3">
        <li><input id="full-day-checkbox" type="checkbox" value="Full Day" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"><label for="full-day-checkbox" class="ms-2 text-xs font-light text-gray-900 dark:text-gray-300">Full Day</label></li>
        <li><input id="flexible-checkbox" type="checkbox" value="Flexible" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"><label for="flexible-checkbox" class="ms-2 text-xs font-light text-gray-900 dark:text-gray-300">Flexible</label></li>
        <li><input id="shift-work-checkbox" type="checkbox" value="Shift Work" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"><label for="shift-work-checkbox" class="ms-2 text-xs font-light text-gray-900 dark:text-gray-300">Shift Work</label></li>
        <li><input id="remote-checkbox" type="checkbox" value="Remote" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"><label for="remote-checkbox" class="ms-2 text-xs font-light text-gray-900 dark:text-gray-300">Remote</label></li>
      </ul>
    </div>
  </div>
  <%# Job Cards %>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 w-3/4 pt-5 mx-auto">
        <% @jobs.each do |job| %>
          <div class="p-2 bg-yellow-100 rounded-lg h-[25vh]" style="color: rgb(4, 39, 62)">
            <div class="flex flex-row justify-between">
              <div class="text-sm"><%= job.created_at.strftime("%b %d, %Y") %></div>
              <div class="w-2 h-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path d="M0 48C0 21.5 21.5 0 48 0l0 48 0 393.4 130.1-92.9c8.3-6 19.6-6 27.9 0L336 441.4 336 48 48 48 48 0 336 0c26.5 0 48 21.5 48 48l0 440c0 9-5 17.2-13 21.3s-17.6 3.4-24.9-1.8L192 397.5 37.9 507.5c-7.3 5.2-16.9 5.9-24.9 1.8S0 497 0 488L0 48z"/></svg>
              </div>
            </div>
            <div class="text-xs mt-2"><%= job.company_name %></div>
            <div class="mb-2"><%= job.title %></div>
            <div class="flex flex-row justify-between">
              <div>
                <div class="text-xs">$<%= job.price %> /mo</div>
                <div class="text-xs"><%= job.location %></div>
              </div>
              <button class="px-2 rounded-2xl text-xs text-gray-300" style="background-color: rgb(4, 39, 62)">Details</button>
            </div>
          </div>
        <% end %>
    </div>
</div>
