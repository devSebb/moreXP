
<div class="w-1/3 mx-auto my-8 px-8 py-5 rounded-lg shadow-xl shadow-white bg-slate-700">
  <h2 class="text-gray-300 font-semibold text-3xl text-center">Edit Your Details</h2>

  <%= form_for @user, url: user_path(@user), method: :put do |f| %>
    <%= render "shared/flashes", resource: @user %>

    <div class="space-y-2">
      <div class="field text-gray-300">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"w-full rounded-lg text-gray-900" %>
      </div>
      <div class="field text-gray-300">
        <%= f.label :location %><br />
        <%= f.text_field :location, autofocus: true, autocomplete: "location", class:"w-full rounded-lg text-gray-900" %>
      </div>
    </div>

    <div class="actions bg-primary-orange w-1/2 rounded-lg text-center text-lg py-1 text-gray-700 my-4 mx-auto hover:text-gray-300">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <%= link_to "Back", :back, class: "text-primary-orange hover:text-gray-300" %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>
